<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create New Group"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:background="@color/colorPrimaryDark"
                android:padding="5dp"
                android:gravity="center_horizontal"
                />

            <EditText
                android:id="@+id/edit_text_group_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Input a group name"
                android:background="@drawable/shape_round_corner"
                android:textCursorDrawable="@color/colorDark"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button_add_group_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="add"
                    android:textColor="@color/colorAccent"
                    android:layout_weight="1"
                    android:background="@drawable/shape_round_add_button"
                    />

                <Button
                    android:id="@+id/button_exit_add_group_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textColor="@color/colorAccent"
                    android:layout_weight="1"
                    android:background="@drawable/shape_round_cancell_button"
                    />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>